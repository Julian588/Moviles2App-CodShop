<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1087ff"
    tools:context=".Registro">

    <Button
        android:id="@+id/btn_back_registro"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#efefef"
        android:textColor="#1087ff"
        android:text="Volver"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_registrarse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:backgroundTint="#efefef"
        android:textColor="#1087ff"
        android:text="Registrarse"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_password" />

    <EditText
        android:id="@+id/txt_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:backgroundTint="#efefef"
        android:ems="10"
        android:hint="ID Usuario"
        android:inputType="number"
        android:textColorHint="#efefef"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag_registro" />

    <TextView
        android:id="@+id/tag_registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Registro"
        android:textColor="#efefef"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_registro" />

    <EditText
        android:id="@+id/txt_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:backgroundTint="#efefef"
        android:textColorHint="#efefef"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_user_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_email" />

    <EditText
        android:id="@+id/txt_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="#efefef"
        android:textColorHint="#efefef"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_user_telefono"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_telefono" />

    <EditText
        android:id="@+id/txt_user_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#efefef"
        android:textColorHint="#efefef"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_user_id"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_id" />

    <EditText
        android:id="@+id/txt_user_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#efefef"
        android:textColorHint="#efefef"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="phone"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_user_apellido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <EditText
        android:id="@+id/txt_user_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="#efefef"
        android:textColorHint="#efefef"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_user_nombre"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_nombre" />

</androidx.constraintlayout.widget.ConstraintLayout>